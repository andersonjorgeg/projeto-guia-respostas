<%- include('./partials/header.ejs') %>
  <body>
    <%- include('./partials/navbar.ejs') %>
    <div class="container">
      <div class="card mt-5">
        <div class="card-header">
          <h3>Realizar perguntas</h3>
        </div>
        <div class="card-body">
          <form method="POST" action="/salvarpergunta">
            <label>Título</label>
            <input 
              name="titulo"
              type="text" 
              placeholder="Título" 
              class="form-control"
            >
            <label class="mt-3">Descrição</label>
            <textarea 
              name="descricao"
              placeholder="Descreva sua pergunta aqui" 
              class="form-control"
            ></textarea>
      
            <button class="btn btn-primary mt-3">Perguntar</button>

            <a href="/" class="btn btn-primary mt-3">Voltar</a>
            
          </form>
        </div>
      </div> 
    </div>
  </body>
