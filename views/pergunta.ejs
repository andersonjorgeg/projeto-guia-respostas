<%- include('./partials/header.ejs') %>

  <body>
    <%- include('./partials/navbar.ejs') %>

      <div class="container">
        <h1 class="mt-3"><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
          <label class="resposta">Resposta:</label>
          <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-primary mt-3">Responder</button>
          <a href="/" class="btn btn-primary mt-3">Voltar</a>
        </form>
        <hr>
        <% respostas.forEach(resposta => { %>
          <div class="card mt-2">
            <div class="card-header">
              <h3>Resposta</h3>
            </div>
            <div class="card-body">
              <p><%= resposta.corpo %></p>
            </div>
          </div>
        <% }) %>
      </div>
  </body>

<%- include('./partials/footer.ejs') %>
