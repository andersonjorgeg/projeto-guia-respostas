<%- include('./partials/header.ejs') %>

  <body>
    <%- include('./partials/navbar.ejs') %>

      <div class="container">
        <h1 class="mt-3"><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form method="POST" action="/responder">
          <h3>Responda</h3>
          <label>Resposta:</label>
          <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
          <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
          <button type="submit" class="btn btn-primary mt-3">Responder</button>
          <a href="/" class="btn btn-primary mt-3">Voltar</a>
        </form>
      </div>
  </body>

